<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <HBox fx:id="content" alignment="CENTER" spacing="15.0" />
                        
                        <HBox spacing="10.0">
                            <children>
                                <Button fx:id="submit" text="Submit" />
                                <Button fx:id="clear" text="Clear" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
</fx:root>
