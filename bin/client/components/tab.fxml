<fx:root type="Tab" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <AnchorPane>
            <children>
                <BorderPane styleClass="content-container" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" >
                    <top><Header fx:id="header" /></top>
                    <center><BorderPane fx:id="scene" style="-fx-padding: 50 0;" /></center>
                </BorderPane>
                <ActionButton fx:id="toggle" icon="slide-up" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="20" />
            </children>
        </AnchorPane>
    </content>
    <graphic><ImageView fx:id="icon" fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true" /></graphic>
</fx:root>